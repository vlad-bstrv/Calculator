<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BtnStyle">
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:insetBottom">@dimen/button_inset_Bottom</item>
        <item name="android:insetTop">@dimen/button_inset_Top</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="BtnStyle.BtnStyleLand">
        <item name="android:layout_height">@dimen/button_height_land</item>

    </style>

    <style name="TextViewStyle">
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/tvInput_textSize</item>
        <item name="android:padding">@dimen/tvInput_padding</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


</resources>